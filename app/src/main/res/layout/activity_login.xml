<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1F2937"
    android:padding="32dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="#EF4444"
        android:padding="16dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Owner"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan PIN untuk akses Admin"
        android:textColor="#9CA3AF"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/etPin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#374151"
        android:padding="16dp"
        android:hint="PIN (1234)"
        android:textColor="#FFFFFF"
        android:textColorHint="#6B7280"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="MASUK"
        android:backgroundTint="#DC2626"
        android:padding="12dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali ke Kiosk"
        android:background="@android:color/transparent"
        android:textColor="#9CA3AF"
        android:layout_marginTop="16dp"/>

</LinearLayout>