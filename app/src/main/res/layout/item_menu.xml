<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Placeholder Gambar -->
        <FrameLayout
            android:id="@+id/imgMenuPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFEDD5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¡"
                android:textSize="40sp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvMenuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pentol Kecil"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1F2937"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- PERBAIKAN DI SINI: Hapus justifyContent -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- layout_weight=1 akan mendorong tombol di sebelahnya ke ujung kanan -->
                <TextView
                    android:id="@+id/tvMenuPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 1.000"
                    android:textStyle="bold"
                    android:textColor="#DC2626"/>

                <ImageButton
                    android:id="@+id/btnAdd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_launcher_background"
                    android:backgroundTint="#FEE2E2"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="#DC2626"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok: 50"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:textColor="#6B7280"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>